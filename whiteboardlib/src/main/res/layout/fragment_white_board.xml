<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/controlLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gray"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gongjulanbeijing"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/btn_drawer"
                    tools:visibility="visible"
                    android:layout_width="44px"
                    android:layout_height="32px"
                    android:layout_marginTop="40px"
                    android:src="@drawable/chouti" />

                <ImageView
                    android:id="@+id/btn_stroke"
                    android:layout_width="13px"
                    android:layout_height="44px"
                    android:layout_marginTop="54px"
                    android:src="@drawable/bi" />

                <ImageView
                    android:id="@+id/btn_xuanze"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_marginTop="54px"
                    android:src="@drawable/xuanze" />


                <ImageView
                    android:id="@+id/btn_eraser"
                    android:layout_width="48px"
                    android:layout_height="44px"
                    android:layout_marginTop="54px"
                    android:src="@drawable/xiangpi" />

                <ImageView
                    android:id="@+id/btn_yuanxing"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_marginTop="54px"
                    android:src="@drawable/yuanxinggongju" />

                <ImageView
                    android:id="@+id/btn_background"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_marginTop="54px"
                    android:src="@drawable/beijinggongju" />

                <ImageView
                    android:id="@+id/btn_drag"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_marginTop="54px"
                    android:src="@drawable/shouzhi" />

                <ImageView
                    android:id="@+id/btn_zujian"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:layout_marginTop="54px"
                    android:src="@drawable/zujian" />
                <ImageView
                    android:id="@+id/btn_add"
                    style="@style/control_btn"
                    android:src="@drawable/ic_add_small"
                    android:visibility="gone"
                    />

                <ImageView style="@style/control_btn.space" />


                <ImageView
                    android:id="@+id/btn_undo"
                    style="@style/control_btn"
                    android:alpha="0.4"
                    android:visibility="gone"
                    android:src="@drawable/ic_undo" />

                <ImageView
                    android:id="@+id/btn_redo"
                    style="@style/control_btn"
                    android:alpha="0.4"
                    android:visibility="gone"
                    android:src="@drawable/ic_redo" />

                <ImageView style="@style/control_btn.space" />

                <ImageView
                    android:id="@+id/btn_photo"
                    style="@style/control_btn"
                    android:visibility="gone"
                    android:src="@drawable/ic_photo" />

                <ImageView style="@style/control_btn.space" />

                <ImageView
                    android:id="@+id/btn_save"
                    style="@style/control_btn"
                    android:visibility="gone"
                    android:src="@drawable/ic_file" />

                <ImageView
                    android:id="@+id/btn_empty"
                    style="@style/control_btn"
                    android:visibility="gone"
                    android:src="@drawable/ic_empty" />


                <ImageView
                    android:id="@+id/btn_send_space"
                    android:visibility="gone"
                    tools:visibility="visible"
                    style="@style/control_btn.space" />

                <ImageView
                    android:id="@+id/btn_send"
                    tools:visibility="visible"
                    android:visibility="gone"
                    style="@style/control_btn"
                    android:layout_weight="1"
                    android:src="@drawable/ic_teacher" />


            </LinearLayout>

        </com.zhy.autolayout.AutoFrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/controlLayout"
            android:background="#efeded">
            <include layout="@layout/include_draw_content_layout" />

            <!--<include layout="@layout/include_grid_view_layout" />-->
        </FrameLayout>

    </RelativeLayout>
